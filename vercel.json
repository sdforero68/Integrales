{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "backend/api/**/*.php": {
      "runtime": "php@8.2"
    }
  }
}

